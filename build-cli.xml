<project name="RAPPAS" default="dist" basedir=".">
  <description>
    RAPPAS: Rapid Alignment-free Phylogenetic Placement via Ancestral Sequences
  </description>

  <!-- directories setup -->  
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist" location="dist"/>
  <property name="lib" location="lib"/>

  <!-- classpath def -->
  <path id="classpath.main">
    <fileset dir="${lib}">
      <include name="**/*.jar"/>
    </fileset>
  </path>

  <path id="classpath.test">
    <pathelement location="${build}" />
    <fileset dir="${lib}">
      <include name="**/*.jar"/>
    </fileset>
  </path>

  <!-- init -->
  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <!-- compilation -->
  <presetdef name="javac">
    <javac includeantruntime="false" />
  </presetdef>
  <target name="compile" depends="init" >
    <javac srcdir="${src}" destdir="${build}" optimize="on" source="1.8" target="1.8">
       <classpath refid="classpath.main" />
    </javac>
  </target>
  
  <!-- jar package -->
  <target name="dist" depends="compile" >
     <mkdir dir="${dist}"/>
     <jar destfile="${dist}/RAPPAS.jar" basedir="${build}">
       <zipgroupfileset dir="${lib}" includes="*.jar" />
       <manifest>
         <attribute name="RAPPAS" value="main"/>
         <attribute name="Main-Class" value="main_v2.Main_v2"/>
       </manifest>
     </jar>
  </target>

  <!-- build javadoc -->
  <target name="javadoc">
    <javadoc sourcepath="src" destdir="doc" >
      <fileset dir="src" defaultexcludes="yes">
        <include name="**/*.java" />
      </fileset>
    </javadoc>
  </target>
  
  <!-- clean compilation directories -->
  <target name="clean" >
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>

  <!-- run integration tests -->
  <target name="integration-test" depends="compile">
    <junit fork="yes" haltonfailure="true" haltonerror="true" printsummary="true">
      <batchtest>
        <fileset dir="${build}/" includes="**/*IT.class" />
      </batchtest>
      <classpath refid="classpath.test" />
    </junit>
  </target>

</project>

